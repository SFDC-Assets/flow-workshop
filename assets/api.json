{
  "swagger": "2.0",
  "info": {
    "title": "TranslateSpec",
    "description": "wrapper for google translate",
    "version": "1"
  },
  "basePath": "/translate",
  "produces": [
    "application/json"
  ],
  "schemes": [
    "http",
    "https"
  ],
  "paths": {
    "/translate": {
      "post": {
        "parameters": [
          {
            "x-amf-mediaType": "application/json",
            "in": "body",
            "name": "generated",
            "schema": {
              "type": "object",
              "required": [
                "target",
                "text"
              ],
              "properties": {
                "target": {
                  "description": "the language you want to translate into",
                  "example": "es",
                  "type": "string"
                },
                "text": {
                  "description": "the text that you want translated",
                  "example": "Hello, World",
                  "type": "string"
                }
              }
            }
          }
        ],
        "responses": {
          "200": {
            "description": "",
            "x-amf-mediaType": "application/json",
            "schema": {
              "type": "object",
              "required": [
                "translation"
              ],
              "properties": {
                "translation": {
                  "description": "translation of the text you submitted",
                  "example": "Â¡Hola Mundo!",
                  "type": "string"
                }
              }
            }
          }
        }
      }
    }
  }
}
